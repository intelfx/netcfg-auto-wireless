# Maintainer: Ivan Shapovalov <intelfx100@gmail.com>

pkgname=netcfg-auto-wireless
pkgver=%NAW_VERSION%
pkgrel=1
pkgdesc="Extended automatic wireless management script"
license=("GPL3")
backup=(etc/conf.d/netcfg-auto-wireless)
depends=("netcfg" "wpa_supplicant" "wpa_actiond")
source=(netcfg-auto-wireless-${pkgver}.tar.xz)
arch=(any)
md5sums=('%NAW_MD5%')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  DESTDIR="$pkgdir" ./install.sh "$pkgver"
}

